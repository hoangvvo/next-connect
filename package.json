{
  "name": "next-connect",
  "version": "0.9.1",
  "description": "The method routing and middleware layer for Next.js (and several others)",
  "keywords": [
    "javascript",
    "nextjs",
    "middleware",
    "router",
    "connect"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "eslint src -c .eslintrc --ext js",
    "test": "nyc mocha",
    "build": "bundt && cp src/index.d.ts dist",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoangvvo/next-connect.git"
  },
  "author": "Hoang Vo (https://www.hoangvvo.com)",
  "bugs": {
    "url": "https://github.com/hoangvvo/next-connect/issues"
  },
  "homepage": "https://github.com/hoangvvo/next-connect#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.2",
    "bundt": "^1.1.2",
    "eslint": "^7.11.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "supertest": "^5.0.0"
  },
  "dependencies": {
    "trouter": "^3.1.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
