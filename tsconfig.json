    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "declaration": false
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "files": true
  }
}
